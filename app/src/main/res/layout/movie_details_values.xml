<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/detail_release_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:fontFamily="sans-serif"
        android:textColor="@color/textTitle"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
       android:text="2017"
        tools:text="2017" />

    <TextView
        android:id="@+id/detail_rating_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/textDetails"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/detail_release_value"
        app:layout_constraintTop_toBottomOf="@+id/detail_release_value"
        tools:text="8.0/10" />

    <ImageView
        android:id="@+id/detail_favorite"
        app:layout_constraintTop_toBottomOf="@id/detail_rating_value"
        app:layout_constraintStart_toStartOf="@id/detail_rating_value"
        android:layout_marginTop="24dp"
        android:onClick="onFavoriteClick"
        tools:src="@drawable/ic_favorite_border_black_24dp"
        android:src="@drawable/ic_favorite_border_black_24dp"
        android:layout_width="@dimen/favorite_icon_size"
        android:layout_height="@dimen/favorite_icon_size" />


</android.support.constraint.ConstraintLayout>